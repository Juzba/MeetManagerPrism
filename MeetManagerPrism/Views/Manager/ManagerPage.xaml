<UserControl
    x:Class="MeetManagerPrism.Views.Manager.ManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerPrism.Views"
    xmlns:manager="clr-namespace:MeetManagerPrism.ViewModels.Manager"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DataContext="{d:DesignInstance Type=manager:ManagerMainViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1280"
    prism:ViewModelLocator.AutoWireViewModel="True"
    FontSize="30"
    Foreground="#FFD340"
    mc:Ignorable="d">


    <Grid Background="#20448C">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="80*" />
        </Grid.ColumnDefinitions>



        <StackPanel Margin="0,50" HorizontalAlignment="Center">

            <Button
                Width="150"
                Height="60"
                Margin="0,10"
                Command="{Binding NavSeznamCommand}"
                Content="Seznam"
                FontSize="20">

                <Button.Style>
                    <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentPage}" Value="Events">
                                <Setter Property="Background" Value="#008CDB" />
                                <Setter Property="Foreground" Value="#FFBC24" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button
                Width="150"
                Height="60"
                Margin="0,10"
                Command="{Binding NavCreateEventCommand}"
                Content="Vytvořit"
                FontSize="20">
                <Button.Style>
                    <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentPage}" Value="CreateEvent">
                                <Setter Property="Background" Value="#008CDB" />
                                <Setter Property="Foreground" Value="#FFBC24" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>

        <ContentControl Grid.Column="1" prism:RegionManager.RegionName="ManagerRegion" />

    </Grid>

</UserControl>
