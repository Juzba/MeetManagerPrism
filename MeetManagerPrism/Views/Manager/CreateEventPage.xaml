<UserControl
    x:Class="MeetManagerPrism.Views.Manager.CreateEventPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerPrism.Views.Manager"
    xmlns:manager="clr-namespace:MeetManagerPrism.ViewModels.Manager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DataContext="{d:DesignInstance Type=manager:CreateEventViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1280"
    prism:ViewModelLocator.AutoWireViewModel="True"
    FontSize="20"
    Foreground="#FFD340"
    mc:Ignorable="d">


    <Grid Background="#20448C">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="50*" MaxWidth="1000" />
            <ColumnDefinition Width="30*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Content="Název: " />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                MinWidth="350"
                Margin="5"
                HorizontalAlignment="Right"
                MaxLength="25"
                Text="{Binding MyEvent.Name}" />

            <Label Grid.Row="1" Content="Začátek:" />
            <DatePicker
                Grid.Row="1"
                Grid.Column="1"
                MinWidth="350"
                Margin="5"
                HorizontalAlignment="Right"
                SelectedDate="{Binding MyEvent.StartDate}" />

            <Label Grid.Row="2" Content="Konec:" />
            <DatePicker
                Grid.Row="2"
                Grid.Column="1"
                MinWidth="350"
                Margin="5"
                HorizontalAlignment="Right"
                SelectedDate="{Binding MyEvent.EndDate}" />

            <Label
                Grid.Row="3"
                MaxWidth="350"
                Margin="0,0,15,0"
                Content="Typ Události:" />
            <ComboBox
                Grid.Row="3"
                Grid.Column="1"
                MinWidth="350"
                Margin="5"
                HorizontalAlignment="Right"
                DisplayMemberPath="Name"
                ItemsSource="{Binding EventTypeList, Mode=TwoWay}"
                SelectedValue="{Binding MyEvent.EventTypeId, Mode=TwoWay}"
                SelectedValuePath="Id" />

            <Label Grid.Row="4" Content="Pokoj:" />
            <ComboBox
                Grid.Row="4"
                Grid.Column="1"
                MinWidth="350"
                Margin="5"
                HorizontalAlignment="Right"
                DisplayMemberPath="Name"
                ItemsSource="{Binding RoomList, Mode=TwoWay}"
                SelectedValue="{Binding MyEvent.RoomID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedValuePath="ID" />


            <Label Grid.Row="5" Content="Popis:" />
            <TextBox
                Grid.Row="5"
                Grid.Column="1"
                MinWidth="350"
                MaxHeight="100"
                Margin="5"
                HorizontalAlignment="Right"
                Text="{Binding MyEvent.Description}" />
        </Grid>

        <StackPanel Grid.Row="1" Grid.Column="2">

            <Button
                Width="200"
                Margin="10"
                VerticalAlignment="Top"
                Command="{Binding CreateEventCommand}"
                Content="Uložit" />
            <Button
                Grid.Row="1"
                Grid.Column="2"
                Width="200"
                Margin="10"
                VerticalAlignment="Top"
                Background="DarkRed"
                Command="{Binding DeleteEventCommand}"
                Content="Smazat"
                Visibility="{Binding VisibilityDelete}" />

            <TextBlock
                Margin="10"
                Foreground="Red"
                TextWrapping="Wrap"
                Text="{Binding ErrorMessage}"
                TextAlignment="Center" />
        </StackPanel>



        <Grid Grid.Row="3" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="47*" />
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="47*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20*" />
                <RowDefinition Height="80*" />
            </Grid.RowDefinitions>



            <TextBlock
                Margin="10"
                VerticalAlignment="Bottom"
                Text="Pozvat"
                TextAlignment="Center" />
            <TextBlock
                Grid.Column="2"
                Margin="10"
                VerticalAlignment="Bottom"
                Text="Pozvaní"
                TextAlignment="Center" />

            <DataGrid
                Grid.Row="1"
                AutoGenerateColumns="False"
                Background="#008CDB"
                CanUserAddRows="False"
                IsReadOnly="True"
                ItemsSource="{Binding UserList}"
                SelectedItem="{Binding SelectedUser, ValidatesOnDataErrors=True}"
                VerticalScrollBarVisibility="Auto">


                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding User.Name}" Header="Name" />
                    <DataGridTextColumn Binding="{Binding Status}" Header="Status" />
                </DataGrid.Columns>
            </DataGrid>


            <DataGrid
                Grid.Row="1"
                Grid.Column="2"
                AutoGenerateColumns="False"
                Background="#008CDB"
                CanUserAddRows="False"
                IsReadOnly="True"
                ItemsSource="{Binding InvitedUsersList}"
                SelectedItem="{Binding SelectedInvitedUser}"
                VerticalScrollBarVisibility="Auto">




                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding User.Name}" Header="Name" />
                    <DataGridTextColumn Binding="{Binding Status}" Header="Status" />
                </DataGrid.Columns>
            </DataGrid>





        </Grid>
    </Grid>
</UserControl>
