<UserControl
    x:Class="MeetManagerPrism.Views.Users.EventDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerPrism.Views.Users"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:users="clr-namespace:MeetManagerPrism.ViewModels.Users"
    d:DataContext="{d:DesignInstance Type=users:EventDetailsViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1280"
    prism:ViewModelLocator.AutoWireViewModel="True"
    FontSize="18"
    Foreground="#FFD340"
    mc:Ignorable="d">
    <Grid Background="#086CB4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="45*" />
            <ColumnDefinition Width="45*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="60*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontSize="40"
            Text="Událost" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="2"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontSize="40"
            Text="Pozvání uživatelé" />




        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock Margin="0,5" Text="Název" />
            <TextBlock
                Grid.Column="1"
                Margin="0,5"
                Text="{Binding EventParametr.Name}" />

            <TextBlock
                Grid.Row="1"
                Margin="0,5"
                Text="Id:" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,5"
                Text="{Binding EventParametr.Id}" />

            <TextBlock
                Grid.Row="2"
                Margin="0,5"
                Text="Začíná:" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,5"
                Text="{Binding EventParametr.StartDate}" />

            <TextBlock
                Grid.Row="3"
                Margin="0,5"
                Text="Končí:" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="1"
                Margin="0,5"
                Text="{Binding EventParametr.EndDate}" />

            <TextBlock
                Grid.Row="4"
                Margin="0,5"
                Text="Autor:" />
            <TextBlock
                Grid.Row="4"
                Grid.Column="1"
                Margin="0,5"
                Text="{Binding EventParametr.Autor.Name}" />

            <TextBlock
                Grid.Row="5"
                Margin="0,5"
                Text="Popis:" />
            <TextBlock
                Grid.Row="5"
                Grid.Column="1"
                Margin="0,5"
                Text="{Binding EventParametr.Description}" />

            <TextBlock
                Grid.Row="6"
                Margin="0,5"
                Text="Typ:" />
            <TextBlock
                Grid.Row="6"
                Grid.Column="1"
                Margin="0,5"
                Text="{Binding EventParametr.EventType.Name}" />

            <TextBlock
                Grid.Row="7"
                Margin="0,5"
                Text="Koná se v:" />
            <TextBlock
                Grid.Row="7"
                Grid.Column="1"
                Margin="0,5"
                Text="{Binding EventParametr.Room.Name}" />

            <TextBlock
                Grid.Row="8"
                Margin="0,5"
                Text="Lokalita:" />
            <TextBlock
                Grid.Row="8"
                Grid.Column="1"
                Margin="0,5"
                Text="{Binding EventParametr.Room.Location}" />

            <TextBlock
                Grid.Row="10"
                Margin="0,5"
                Text="Můj Status:" />
            <TextBlock
                Grid.Row="10"
                Grid.Column="1"
                Margin="0,5"
                Text="{Binding InvitedUser.Status}" />

        </Grid>

        <DataGrid
            Grid.Row="2"
            Grid.Column="2"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding InvitedUsersList}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding User.Name}" Header="Name" />
                <DataGridTextColumn Binding="{Binding Status}" Header="Status" />
            </DataGrid.Columns>
        </DataGrid>

        <Button
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Height="50"
            HorizontalAlignment="Center"
            Command="{Binding NavDashboardPageCommand}"
            Content="Zpět na DashBoard"
            FontSize="20" />

        <StackPanel
            Grid.Row="3"
            Grid.Column="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Height="50"
                Margin="30,0"
                Command="{Binding AcceptCommand}"
                Content="Přijmout"
                FontSize="20" />
            <Button
                Height="50"
                Margin="30,0"
                Background="Red"
                Command="{Binding DeclineCommand}"
                Content="Odmítnout"
                FontSize="20" />
        </StackPanel>


    </Grid>
</UserControl>
