<UserControl
    x:Class="MeetManagerPrism.Views.Users.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerPrism.Views.Users"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:users="clr-namespace:MeetManagerPrism.ViewModels.Users"
    d:DataContext="{d:DesignInstance Type=users:DashboardViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    FontSize="18"
    mc:Ignorable="d">
    <Grid Background="#3B3936">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*" />
            <ColumnDefinition Width="30*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
            <RowDefinition Height="auto" MinHeight="100" />
        </Grid.RowDefinitions>

        <TextBlock
            HorizontalAlignment="Center"
            FontSize="55"
            Foreground="#BD2A2E"
            Text="DashBoard" />

        <TextBlock
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="White"
            Text="{Binding DateTime, StringFormat={}{0:dd.MM.yyyy HH:mm}}" />

        <DataGrid
            Grid.Row="1"
            Margin="40,20"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            FontSize="18"
            HorizontalScrollBarVisibility="Hidden"
            IsReadOnly="True"
            ItemsSource="{Binding TodayEvents}"
            VerticalScrollBarVisibility="Hidden">

            <DataGrid.Columns>

                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.Header>

                        <TextBlock
                            FontSize="25"
                            Foreground="#BD2A2E"
                            Text="Dnešní akce" />
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="220" />
                                    <ColumnDefinition Width="220" />
                                    <ColumnDefinition Width="220" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    FontSize="30"
                                    Foreground="#486966"
                                    Text="{Binding Name}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Foreground="White"
                                    Text="{Binding StartDate, StringFormat='Od: {0:dd.MM.yyyy}'}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Foreground="White"
                                    Text="{Binding EndDate, StringFormat='Do: {0:dd.MM.yyyy}'}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Foreground="White"
                                    Text="{Binding User.Name, StringFormat='Organizátor: {0}'}" />

                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


        <DataGrid
            Grid.Row="2"
            Margin="40,20"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding UpcomingEvents}">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.Header>
                        <TextBlock
                            FontSize="15"
                            Foreground="#BD2A2E"
                            Text="Nadcházejícií akce" />
                    </DataGridTemplateColumn.Header>
                </DataGridTemplateColumn>

                <DataGridTextColumn Binding="{Binding Name}" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
