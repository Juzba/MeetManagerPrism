<UserControl
    x:Class="MeetManagerPrism.Views.Users.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerPrism.Views.Users"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:users="clr-namespace:MeetManagerPrism.ViewModels.Users"
    d:DataContext="{d:DesignInstance Type=users:DashboardViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1200"
    prism:ViewModelLocator.AutoWireViewModel="True"
    FontSize="18"
    mc:Ignorable="d">
    <Grid Background="#20448C">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="65*" />
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="60*" MinHeight="250" />
            <RowDefinition Height="30*" MinHeight="120" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>

        <DataGrid
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,40,20"
            AutoGenerateColumns="False"
            Background="#008CDB"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            FontSize="18"
            HorizontalScrollBarVisibility="Hidden"
            IsReadOnly="True"
            ItemsSource="{Binding TodayEvents}"
            SelectedItem="{Binding SelectedEvent}"
            VerticalScrollBarVisibility="Auto">

            <DataGrid.Columns>

                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.Header>

                        <TextBlock
                            FontSize="25"
                            Foreground="#20448C"
                            Text="Dnešní akce" />
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="220" />
                                    <ColumnDefinition Width="220" />
                                    <ColumnDefinition Width="220" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    FontSize="30"
                                    Foreground="#FFBC24"
                                    Text="{Binding Name}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Foreground="#FFBC24"
                                    Text="{Binding StartDate, StringFormat='Od: {0:dd.MM.yyyy}'}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Foreground="#FFBC24"
                                    Text="{Binding EndDate, StringFormat='Do: {0:dd.MM.yyyy}'}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Foreground="#FFBC24"
                                    Text="{Binding Autor.Name, StringFormat='Organizátor: {0}'}" />

                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


        <DataGrid
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,20,40,0"
            AutoGenerateColumns="False"
            Background="#008CDB"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding UpcomingEvents}"
            SelectedItem="{Binding SelectedEvent}">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.Header>
                        <TextBlock
                            FontSize="15"
                            Foreground="#20448C"
                            Text="Nadcházejícií akce" />
                    </DataGridTemplateColumn.Header>
                </DataGridTemplateColumn>

                <DataGridTextColumn Binding="{Binding Name}" Foreground="#FFBC24" />
                <DataGridTextColumn Binding="{Binding StartDate, StringFormat={}{0: hh.MM.yyyy}}" Foreground="#FFBC24" />
                <DataGridTextColumn Binding="{Binding EndDate, StringFormat={}{0: hh.MM.yyyy}}" Foreground="#FFBC24" />
            </DataGrid.Columns>
        </DataGrid>


        <Grid
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="9*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="30"
                Foreground="White"
                Text="{Binding ActualTime, StringFormat={}{0:dd.MM.yyyy HH:mm:ss}}" />

            <TextBlock
                Grid.Row="1"
                Margin="5"
                VerticalAlignment="Bottom"
                FontSize="25"
                Foreground="#FFBC24"
                Text="Nové pozvánky."
                TextAlignment="Center" />


            <DataGrid
                Grid.Row="2"
                AutoGenerateColumns="False"
                Background="#008CDB"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                Foreground="#FFBC24"
                IsReadOnly="True"
                ItemsSource="{Binding EventInvationList}"
                SelectedItem="{Binding SelectedEvent}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Binding="{Binding Name}"
                        Foreground="#FFBC24"
                        Header="Událost" />
                    <DataGridTextColumn
                        Binding="{Binding Autor.Name}"
                        Foreground="#FFBC24"
                        Header="Autor" />
                    <DataGridTextColumn
                        Binding="{Binding StartDate, StringFormat={}{0:dd.MM.yyyy}}"
                        Foreground="#FFBC24"
                        Header="Začátek" />
                </DataGrid.Columns>

            </DataGrid>

        </Grid>


    </Grid>
</UserControl>
