<UserControl
    x:Class="MeetManagerPrism.Views.Users.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerPrism.Views.Users"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:users="clr-namespace:MeetManagerPrism.ViewModels.Users"
    d:DataContext="{d:DesignInstance Type=users:DashboardViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1200"
    prism:ViewModelLocator.AutoWireViewModel="True"
    FontSize="18"
    mc:Ignorable="d">
    <Grid Background="#3B3936">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="65*" />
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="60*" MinHeight="250" />
            <RowDefinition Height="30*" MinHeight="120" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>

        <DataGrid
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,40,20"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            FontSize="18"
            HorizontalScrollBarVisibility="Hidden"
            IsReadOnly="True"
            ItemsSource="{Binding TodayEvents}"
            VerticalScrollBarVisibility="Auto">

            <DataGrid.Columns>

                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.Header>

                        <TextBlock
                            FontSize="25"
                            Foreground="#BD2A2E"
                            Text="Dnešní akce" />
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="220" />
                                    <ColumnDefinition Width="220" />
                                    <ColumnDefinition Width="220" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    FontSize="30"
                                    Foreground="#486966"
                                    Text="{Binding Name}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Foreground="White"
                                    Text="{Binding StartDate, StringFormat='Od: {0:dd.MM.yyyy}'}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Foreground="White"
                                    Text="{Binding EndDate, StringFormat='Do: {0:dd.MM.yyyy}'}" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Foreground="White"
                                    Text="{Binding User.Name, StringFormat='Organizátor: {0}'}" />

                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


        <DataGrid
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,20,40,0"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding UpcomingEvents}">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.Header>
                        <TextBlock
                            FontSize="15"
                            Foreground="#BD2A2E"
                            Text="Nadcházejícií akce" />
                    </DataGridTemplateColumn.Header>
                </DataGridTemplateColumn>

                <DataGridTextColumn Binding="{Binding Name}" />
                <DataGridTextColumn Binding="{Binding StartDate, StringFormat={}{0: hh.MM.yyyy}}" />
                <DataGridTextColumn Binding="{Binding EndDate, StringFormat={}{0: hh.MM.yyyy}}" />
            </DataGrid.Columns>
        </DataGrid>


        <Grid
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="9*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="30"
                Foreground="White"
                Text="{Binding ActualTime, StringFormat={}{0:dd.MM.yyyy HH:mm:ss}}" />

            <TextBlock
                Grid.Row="1"
                Margin="5"
                VerticalAlignment="Bottom"
                FontSize="25"
                Foreground="#BD2A2E"
                Text="Jsem pozván na událost:"
                TextAlignment="Center" />


            <DataGrid Grid.Row="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Událost" />
                </DataGrid.Columns>

            </DataGrid>

        </Grid>


    </Grid>
</UserControl>
