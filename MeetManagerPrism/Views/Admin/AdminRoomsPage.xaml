<UserControl
    x:Class="MeetManagerPrism.Views.Admin.AdminRoomsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:admin="clr-namespace:MeetManagerPrism.ViewModels.Admin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerPrism.Views.Admin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DataContext="{d:DesignInstance Type=admin:AdminRoomsViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1280"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">


    <Grid Background="#20448C">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*" />
            <ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Row="1"
            Grid.Column="1"
            Height="50"
            Margin="0"
            Padding="10,5"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Command="{Binding SaveChangesCommand}"
            Content="Uložit změny"
            FontSize="25"
            Foreground="#161616" />
        <StackPanel>


            <TextBlock
                FontSize="20"
                Foreground="Red"
                Text="{Binding ErrorMessage}"
                TextAlignment="Center" />
        </StackPanel>


        <DataGrid
            Grid.Row="1"
            Margin="20,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            AutoGenerateColumns="False"
            Background="#086CB4"
            CanUserAddRows="false"
            FontSize="17"
            Foreground="#FFD340"
            ItemsSource="{Binding RoomList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectionMode="Single"
            SelectionUnit="Cell">
            <DataGrid.Columns>
                <DataGridTextColumn
                    MinWidth="70"
                    Binding="{Binding ID}"
                    Header="Id"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    MinWidth="150"
                    Binding="{Binding Name}"
                    Header="Název" />
                <DataGridTextColumn
                    MinWidth="150"
                    Binding="{Binding Location}"
                    Header="Místo" />
                <DataGridTextColumn
                    MinWidth="150"
                    Binding="{Binding Capacity}"
                    Header="Kapacita" />


                <DataGridTemplateColumn MinWidth="80" Header="Akce">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                Command="{Binding DataContext.RemoveRoomCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Content="Smazat" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>



</UserControl>
