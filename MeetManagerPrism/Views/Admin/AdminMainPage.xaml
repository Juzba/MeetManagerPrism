<UserControl
    x:Class="MeetManagerPrism.Views.Admin.AdminMainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:admin="clr-namespace:MeetManagerPrism.ViewModels.Admin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerPrism.Views.Admin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DataContext="{d:DesignInstance Type=admin:AdminMainViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1280"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">


    <Grid Background="#20448C">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="80*" />
        </Grid.ColumnDefinitions>



        <StackPanel Margin="0,50,0,0" HorizontalAlignment="Center">

            <Button
                Width="150"
                Height="60"
                Margin="0,10"
                Command="{Binding NavAdminUsersCommand}"
                Content="Users"
                FontSize="20">
                <Button.Style>
                    <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentPage}" Value="Users">
                                <Setter Property="Background" Value="#008CDB" />
                                <Setter Property="Foreground" Value="#FFBC24" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>





            <Button
                Width="150"
                Height="60"
                Margin="0,10"
                Command="{Binding NavAdminRoomsCommand}"
                Content="Místnosti"
                FontSize="20">

                <Button.Style>
                    <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentPage}" Value="Rooms">
                                <Setter Property="Background" Value="#008CDB" />
                                <Setter Property="Foreground" Value="#FFBC24" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button
                Width="150"
                Height="60"
                Margin="0,10"
                Command="{Binding NavAdminEventTypesCommand}"
                Content="Event Types"
                FontSize="20">
                <Button.Style>
                    <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentPage}" Value="EventTypes">
                                <Setter Property="Background" Value="#008CDB" />
                                <Setter Property="Foreground" Value="#FFBC24" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

            </Button>


        </StackPanel>

        <ContentControl Grid.Column="1" prism:RegionManager.RegionName="AdminRegion" />

    </Grid>
</UserControl>
