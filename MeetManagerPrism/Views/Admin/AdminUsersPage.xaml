<UserControl
    x:Class="MeetManagerPrism.Views.Admin.AdminUsersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:admin="clr-namespace:MeetManagerPrism.ViewModels.Admin"
    xmlns:converters="clr-namespace:MeetManagerPrism.Common.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerPrism.Views.Admin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodel="clr-namespace:MeetManagerPrism.ViewModels"
    d:DataContext="{d:DesignInstance Type=admin:AdminUsersViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="1280"
    prism:ViewModelLocator.AutoWireViewModel="True"
    FontSize="16"
    Foreground="#FFD340"
    mc:Ignorable="d">


    <Grid Background="#20448C">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*" />
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="1"
                Margin="0,35"
                VerticalAlignment="Bottom">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35*" />
                    <ColumnDefinition Width="65*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition MinHeight="50" />
                    <RowDefinition MinHeight="50" />
                    <RowDefinition MinHeight="50" />
                    <RowDefinition MinHeight="50" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>


                <TextBlock
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    FontSize="35"
                    Foreground="#FFBC24"
                    Text="Nový Uživatel" />

                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Text="{Binding NewUser.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Text="{Binding NewUser.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox
                    Grid.Row="3"
                    Grid.Column="1"
                    VerticalAlignment="Bottom"
                    Text="{Binding NewUser.PasswordHash, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <ComboBox
                    Grid.Row="4"
                    Grid.Column="1"
                    DisplayMemberPath="RoleName"
                    ItemsSource="{Binding RolesList}"
                    SelectedItem="{Binding NewUser.Role}" />


                <Label
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    Content="Jméno:" />
                <Label
                    Grid.Row="2"
                    VerticalAlignment="Center"
                    Content="Email:" />
                <Label
                    Grid.Row="3"
                    VerticalAlignment="Center"
                    Content="Heslo:" />
                <Label
                    Grid.Row="4"
                    VerticalAlignment="Center"
                    Content="Role:" />




                <Button
                    Grid.Row="5"
                    Grid.ColumnSpan="2"
                    Height="50"
                    Margin="0,20"
                    Padding="10,5"
                    VerticalAlignment="Top"
                    Command="{Binding AddUserCommand}"
                    Content="Přidat"
                    FontSize="25"
                    Foreground="#161616" />
            </Grid>





            <Button
                Grid.Row="0"
                Height="50"
                Padding="10,5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Command="{Binding SaveCommand}"
                Content="Uložit změny"
                FontSize="25"
                Foreground="#161616" />

        </Grid>


        <TextBlock
            FontSize="20"
            Foreground="Red"
            Text="{Binding ErrorMessage}"
            TextAlignment="Center" />



        <DataGrid
            Grid.Row="1"
            Margin="20,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            AutoGenerateColumns="False"
            Background="#086CB4"
            CanUserAddRows="false"
            FontSize="17"
            Foreground="#FFBC24"
            ItemsSource="{Binding Users, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectionMode="Single"
            SelectionUnit="Cell">
            <DataGrid.Columns>
                <DataGridTextColumn
                    MinWidth="70"
                    Binding="{Binding Id}"
                    Header="Id"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    MinWidth="150"
                    Binding="{Binding Name}"
                    Header="UserName" />
                <DataGridTextColumn
                    MinWidth="150"
                    Binding="{Binding Email}"
                    Header="Email" />


                <DataGridTemplateColumn Header="Role">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox
                                DisplayMemberPath="RoleName"
                                ItemsSource="{Binding DataContext.RolesList, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                SelectedValue="{Binding RoleId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="Id" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn MinWidth="80" Header="Akce">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                Command="{Binding DataContext.RemoveUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Content="Smazat" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
